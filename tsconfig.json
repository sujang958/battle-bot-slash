{
  "compilerOptions": {
    "incremental": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@config": ["./config.ts"],
      "@client": ["./src/structures/BotClient.ts"],
      "@events/*": ["./src/events/*"],
      "@commands/*": ["./src/commands/*"],
      "@types": ["typings/index.d.ts"],
      "@managers/*": ["./src/managers/*"],
      "@schemas/*": ["./src/schemas/*"]
    },
    "outDir": "build",
    "diagnostics": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "typings/**/*", "./config.ts"],
  "exclude": ["node_modules", "build", "**/*.spec.js", ".github"]
}